{
    "name": "laravel/laravel",
    "description": "Loojas",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "artesaos/seotools": "^0.10.0",
        "cagartner/correios-consulta": "0.1.*",
        "creativeorange/gravatar": "^1.0",
        "egulias/email-validator": "^2.1",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "^5.4",
        "league/fractal": "^0.16.0",
        "maatwebsite/excel": "^2.1",
        "oriceon/oauth-5-laravel": "dev-master",
        "prettus/l5-repository": "^2.6",
        "respect/validation": "^1.1",
        "robclancy/presenter": "^1.3",
        "barryvdh/laravel-dompdf" : "v0.7.1"
    },
    "minimum-stability": "dev",
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "laravel/browser-kit-testing": "^1.0",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "5.1.3"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Loojas\\Core\\": "app/core",
            "Loojas\\Homepage\\": "app/src/domains/homepage/",
            "Loojas\\Learning\\": "app/src/domains/learning/",
            "Loojas\\Api\\": "app/src/domains/api",
            "Loojas\\Account\\": "app/src/domains/app/account/",  
            "Loojas\\Helpdesk\\": "app/src/domains/app/helpdesk/",                     
            "Loojas\\Control\\": "app/src/domains/app/general-control/",
            "Loojas\\Store\\": "app/src/domains/store",
            "Loojas\\Admin\\": "app/src/domains/app/admin/",
            "Loojas\\Wizard\\": "app/src/domains/app/wizard/",
            "Loojas\\Themes\\": "app/src/themes/",
            "Loojas\\OAuth\\": "app/src/oauth/"          
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
